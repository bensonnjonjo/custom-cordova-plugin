<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="de.appplant.cordova.plugin.custom"
        version="0.5.3">

    <name>Printer</name>

    <description>A custom printing plugin for Cordova 3.x.x</description>
    <repo>https://github.com/bensonnjonjo/custom-cordova-plugin.git</repo>
    <keywords>custom, android</keywords>
    <license>Apache 2.0</license>

    <author>Benson Njonjo</author>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <!-- interface -->
    <js-module src="www/printer.js" name="Printer">
        <clobbers target="plugin.custom" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Printer">
                <param name="android-package" value="de.appplant.cordova.plugin.custom.Printer"/>
            </feature>
        </config-file>

        <source-file src="src/android/Printer.java" target-dir="src/de/appplant/cordova/plugin/custom" />
    </platform>
</plugin>
